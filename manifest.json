{
    "manifest_version": 2,
    "name": "Context menu search",
    "version": "1.2.1",
    "author": "bam",
    "description": "Adds a context menu item to provide the search of the selected text with Google.",
    "icons": {
        "16": "icons/ic_search_black_24dp_1x.png",
        "24": "icons/ic_search_black_24dp_1x.png",
        "48": "icons/ic_search_black_24dp_2x.png"
    },
    "permissions": [
        "contextMenus",
        "storage"
    ],
    "background": {
        "scripts": [
            "src/background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content_script.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": {
            "25": "icons/ic_search_black_24dp_1x.png",
            "40": "icons/ic_search_black_24dp_2x.png"
        },
        "default_title": "Context menu search settings",
        "default_popup": "src/popup.html"
    },
    "options_page": "src/options.html"
}